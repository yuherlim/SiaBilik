                    <Button
                        android:id="@+id/btnContactOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="Contact Owner"
                        app:layout_constraintEnd_toStartOf="@+id/btnFindCompanion"
                        app:layout_constraintTop_toTopOf="@+id/btnFindCompanion" />

                    <Button
                        android:id="@+id/btnFindCompanion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="16dp"
                        android:text="Find Companion"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>